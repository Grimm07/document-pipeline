<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender with pattern -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender for production -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/document-pipeline-api.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/document-pipeline-api.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Application loggers -->
    <logger name="org.example.pipeline" level="DEBUG"/>

    <!-- Framework loggers -->
    <logger name="io.ktor" level="INFO"/>
    <logger name="org.koin" level="INFO"/>
    <logger name="org.jetbrains.exposed" level="INFO"/>
    <logger name="com.zaxxer.hikari" level="INFO"/>
    <logger name="org.flywaydb" level="INFO"/>

    <!-- Reduce noise from RabbitMQ client -->
    <logger name="com.rabbitmq" level="WARN"/>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <!-- Uncomment for file logging in production -->
        <!-- <appender-ref ref="FILE"/> -->
    </root>
</configuration>
